<%- include('../templates/head') %>

<form action="/tarefas/store" method="POST">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-md-6 col-sm-1">
            <div class="card mt-5">
                <div class="card-body">
                    <div class="mb-3">
                        <label for="titulo" class="form-label">Titulo</label>
                        <input type="text" class="form-control" name="titulo" id="titulo" value="<%= typeof(tarefa) != 'undefined' ? tarefa.titulo : '' %>">
                    </div>
                    <div class="mb-3">
                      <label for="descricao" class="form-label">Descrição</label>
                      <textarea class="form-control" name="descricao" id="descricao"><%= typeof(tarefa) != 'undefined' ? tarefa.descricao : '' %></textarea>
                    </div>
                    <div class="form-check form-switch mb-3">
                      <input class="form-check-input" type="checkbox" role="switch" id="prazo" name="prazo" <%= typeof(tarefa) != 'undefined' && tarefa.data_termino !== null ? 'checked' : '' %>>
                      <label class="form-check-label" for="prazo">Definir data limite de conclusão</label>
                    </div>
                    <div class="mb-3" id="divPrazo">
                      <label for="data_conclusao" class="form-label">Data Conlusão</label>
                      <input type="date" class="form-control" name="data_conclusao" id="data_conclusao" value="<%= typeof(tarefa) != 'undefined' && tarefa.data_termino !== null ? DateTime.fromJSDate(tarefa.data_termino).toFormat('yyyy-MM-dd') : '' %>">
                    </div>
                    <a href="/tarefas/dashboard" class="btn btn-secondary" role="button">Voltar</a>
                    <button type="submit" class="btn btn-primary">Criar</button>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-sm-1"></div>
    </div>                
</form>

<%- include('../templates/footer') %>